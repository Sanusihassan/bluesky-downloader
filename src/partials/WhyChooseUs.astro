---
import type { whyChooseUsType } from "../content/content";

const { whyChooseUs } = Astro.props as { whyChooseUs: whyChooseUsType };
import { CiStar } from "react-icons/ci";
---

<section
  class="why-choose-us py-16 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-gray-50 to-white"
  aria-labelledby="why-choose-us-title"
>
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-12">
      <h2
        id="why-choose-us-title"
        class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4 flex justify-center items-center"
      >
        <CiStar className="golden-icon" />
        {whyChooseUs.title}
      </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 text-center">
      {
        whyChooseUs.features.map((feature, index) => (
          <div
            class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 border border-gray-100"
            data-aos="fade-up"
            data-aos-delay={index * 100}
          >
            <h3 class="text-xl font-semibold text-gray-900 mb-3">
              {feature.title}
            </h3>
            <p class="text-gray-600 leading-relaxed">{feature.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .why-choose-us {
    scroll-margin-top: 2rem;
  }
  @media (prefers-reduced-motion: reduce) {
    .why-choose-us [data-aos] {
      transition: none !important;
      transform: none !important;
      opacity: 1 !important;
    }
  }
</style>
